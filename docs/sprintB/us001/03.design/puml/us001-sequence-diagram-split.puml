@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

autonumber

'hide footbox
actor "Organization Employee" as ADM
participant ":CreateTaskUI" as UI
participant ":RegisterSkillController" as CTRL
participant "organization\n:Organization" as ORG

activate ADM

    ADM -> UI : asks to register a new skill

    activate UI

        UI -> CTRL** : register
        UI -> CTRL : getSkillList()
        ref over CTRL
            Get Skill List

        end ref

        activate CTRL

            CTRL --> UI : skillList
        deactivate CTRL

        UI --> ADM : show skill list
        UI --> ADM : request data (name)

    deactivate UI


    deactivate UI

    ADM -> UI : types requested data (name)
    activate UI

        UI --> ADM : shows requested data typed
    deactivate UI

    ADM -> UI : submits data
    activate UI

        UI -> CTRL : registerSkill(name)
        activate CTRL



                ref over CTRL
                    Get Skill List

                end ref

                CTRL --> CTRL : skillList
            deactivate CTRL


            deactivate CTRL


            CTRL -> ORG: register(name)

            activate CTRL

            activate ORG

                ref over ORG
                    Register Skill

                end

                ORG --> CTRL : Skill
            deactivate ORG

            CTRL --> UI: skill
            deactivate CTRL
            UI --> ADM: displays operation success
    deactivate UI

deactivate ADM

@enduml