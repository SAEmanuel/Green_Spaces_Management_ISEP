@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

participant "skillListRepository\n:skillListRepository" as ORG
participant "skill\n:Skill" as EMPREGO

autonumber 16

autonumber 16.1

        -> EMPREGO: registerSkill(name)
            group Register skill
            activate EMPREGO
                EMPREGO --> EMPREGO : validateNameSkill(skill)

                loop [for each skill name
                    EMPREGO -> EMPREGO : validateNameSkill(skill)
                    activate EMPREGO

                    EMPREGO --> EMPREGO : true/false
                    deactivate EMPREGO
                end

            EMPREGO --> ORG : skill
            deactivate EMPREGO
            activate ORG


        ORG -> ORG: addSkill(skill)
        activate ORG
            ORG -> ORG: validateSkill(skill)
            activate ORG
                ORG --> ORG
            deactivate ORG

            ORG --> ORG
        deactivate ORG
    end

    autonumber 17
    <-- ORG : skill
deactivate ORG


@enduml