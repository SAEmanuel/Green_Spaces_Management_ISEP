@startuml
'skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false
skinparam linetype polyline
'skinparam linetype orto
'skinparam classAttributeIconSize 0
'left to right direction




class SkillRepository {
+ getSkillList()

}

class CollaboratorRepository {
    + findCollaboratorById(collboratorId)
    + assignSkillCollaborator(skill)
    + validateIfHasSkill(skill)

}


class Repositories {
    - Repositories()
    + getInstance() : Repositories
    + getSkillRepository()
    + getCollaboratorRepository()
}

class AssignSkillCollaboratoController {
    + AssignSkillCollaboratoController(skillRepository,collaboratorRepository)
    + getSkillList()
    + assignSkillCollaboratorById(collaboratorId,skill)

}

class AssignSkillCollaboratorUI {
}

AssignSkillCollaboratorUI .> AssignSkillCollaboratoController

AssignSkillCollaboratoController .> Repositories : repositories
Repositories  ..> "1 " SkillRepository
Repositories  ..> "1 " CollaboratorRepository
Repositories -> Repositories : instance

AssignSkillCollaboratoController ..>  SkillRepository : skillRepository
AssignSkillCollaboratoController .>  CollaboratorRepository : collaboratorRepository


@enduml