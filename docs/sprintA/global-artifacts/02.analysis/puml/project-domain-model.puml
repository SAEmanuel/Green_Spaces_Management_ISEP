@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false
'skinparam linetype ortho
left to right direction
skinparam classAttributeIconSize 0
hide circle
hide methods

'title Domain Model

package "HR System" {

    class HRM {
    }

    class Skills {
        name
    }

class Organization {
    name
    vatNumber
    website
    phoneNumber
    email
}

    class Job {
        name
    }

    class Collaborator {
        name
        birthdate
        admissionDate
        address
        phoneNumber
        email
        taxpayerNumber
        id_doc_type
        id_doc_number

    }

    class Team {
        skills
        teamSize
    }

    class FM {
    }

    class Vehicle {
         plateID
         brand
         model
         type
         tare
         grossWeight
         kms
         registerDate
         acquisitionDate
         maintenanceFrequency
    }

    class VehiclesForCheckUp {
        number plate
        brand
        model
        type
        tare
        gross weight
        current Km
        register date
        Acquisition Date
        Maintenance/Checkup Frequency (in Kms)
    }



    HRM "1  " --- "1..*" Skills : creates >
    HRM "1" - "1..*" Job : creates >
    HRM "1" - "1..*" Collaborator : creates >
    HRM "1  " - "1 " Team : generates >


    FM "1" -- "*" Vehicle : creates >
    FM "1" -- "*" VehiclesForCheckUp: selects >

    Skills "1..*   " -- "1..*" Collaborator : assigned >

    Organization "1" ---- "*" Skills : has >
    Organization "1" --- "1..*" Job : has >
    Organization "1" -- "1..*" Collaborator : has >
    Organization "1 " ---- "*" Team : has >

    Collaborator "1" - "1..*" Job : has >

    Team "1 " -- "1..*" Collaborator : assigned <

    Vehicle "*" -- "1" Organization : has <
    Vehicle "*"-- "*" VehiclesForCheckUp: contains >

    VehiclesForCheckUp "*" -- "1" FM : informs >


}

@enduml