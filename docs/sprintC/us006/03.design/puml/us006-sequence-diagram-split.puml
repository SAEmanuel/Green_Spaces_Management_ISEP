@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

autonumber

'hide footbox
actor "Vehicle Fleet Manager" as VFM
participant ":RegisterVehicleUI" as UI
participant ":VehicleController" as CTRL
participant ":Repositories" as RepositorySingleton
participant "repositories\n:Repositories" as PLAT
participant "vehicleRepository:\nVehicleRepository" as vehicleRepository
participant "vehicle\n:Vehicle" as VEICULO

activate VFM

        VFM -> UI : asks to register a new vehicle

        activate UI

'            UI --> ADM : requests data (reference, description,  informal \n description, technical description, duration, cost)
            'create CTRL
            UI -> CTRL** : create

        UI --> VFM : request data (plateID, brand, model...)
            deactivate UI

        VFM -> UI : types requested data
        activate UI

        UI -> CTRL : showTypes()
        activate CTRL

            ref over CTRL
            Get Vehicle Repository
            end ref

        CTRL -> vehicleRepository : showTypes()
        activate vehicleRepository


        vehicleRepository --> CTRL : Types
        deactivate vehicleRepository

        CTRL --> UI : types
        deactivate CTRL
        UI --> VFM : shows types of vehicles\n and request a selection
            deactivate UI

        VFM -> UI : Select a type
        activate UI

        UI --> VFM : request data (tareWeight,grossWeight...)
            deactivate UI

        VFM -> UI : types requested data
        activate UI

        UI --> VFM : show all data registered\n and the confirmation menu
        deactivate UI

    VFM -> UI : submits data
    activate UI

        UI -> CTRL : registerVehicle(plateID, brand, model...)
        activate CTRL




            CTRL -> vehicleRepository: registerVehicle(plateID, brand, model...)
            activate vehicleRepository


             ref over vehicleRepository
             Register Vehicle
             end ref

                vehicleRepository --> CTRL : vehicle

            deactivate vehicleRepository

            CTRL --> UI: vehicle
            deactivate CTRL
            UI --> VFM: shows operation success.
    deactivate UI

deactivate VFM

@enduml