@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

participant "skillRepository\n:skillRepository" as ORG
participant "skill\n:Skill" as EMPREGO

autonumber 16

autonumber 16.1

        -> ORG: registerSkill(skillName)
            activate ORG
            group Register skill
        ORG -> EMPREGO** : create



            ORG -> ORG: addSkill(skill)
        deactivate EMPREGO

        activate ORG
            ORG -> ORG: validateSkill(skill)
            activate ORG
                ORG --> ORG
            deactivate ORG

            ORG --> ORG
        deactivate ORG
    end

    autonumber 17
    <-- ORG : skill
deactivate ORG


@enduml